.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #F0F4F3;
}
.user {
  width: 100%;
  height: 260rpx;
  background: #ffffff;
  margin: 0 auto;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 5px #eeeeee;
}
.user .useravatar{
  display: flex;  
  flex-direction: row;
}
.user .useravatar .icon{
  flex: 1;
  width: 20rpx;
}
.user .useravatar .userinfo-avatar{
  flex: 1.7;
  width: 160rpx;
  height: 160rpx;
 
}
.userinfo{
  display: flex;  
  flex-direction: column;  
}

.userinfo .username{
  flex: 1;
  font-size: 35rpx;
  text-align: center;
  color: #818A8F;
}
.userinfo .userpoint{
  flex: 1;
  font-size: 26rpx;
  color: #bababa;
  text-align: center;
}

.my{
  margin: 15rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}
.my .my-item{
  width: 750rpx;
  background: #ffffff;
  padding: 0
}
.my .my-item .myitem-icon{
  flex: 1;
}
.my .my-item .myitem-icon image{
  width: 45rpx;
  height: 45rpx;
  padding: 37.5rpx 0;
}
.my .my-item .myitem-name{
  flex: 5;
  text-align: left;
  font-size: 34rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.my .my-item:last-child .myitem-name{
  border-bottom: none;
}