.body {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  min-height: 100%;
  font-size: 32rpx;
  color: #333;
  background-color: #FFF;
}

.wrapper {
  padding: 0 50rpx;
}

input {
  border: 1px solid #ccc;
  background-color: #fafafa;
  border-radius: 3px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075) inset;
  padding: 10px 10px;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  height: 46px;
}

.logo {
  width: 150px;
  height: 150px;
  margin: 0 auto;
  display: block;
}

.logo-sub {
  text-align: center;
  margin-bottom: 50rpx;
  color: #666;
}

.bottom-btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  left: 0;
  box-sizing: border-box;
  background-color: #fff;
  padding: 50rpx;
}

.captcha-wrap {
  position: relative;
}

.captcha {
  height: 44px;
  width: 102px;
  position: absolute;
  right: 2px;
  top: 1px;
  z-index: 2;
}

form button[type=primary] {
  margin-bottom: 30rpx;
}